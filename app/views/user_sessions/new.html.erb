<h1>Login</h1>

<%= form_with model: @user_session, :url => user_session_path do |f| %>
  <%= render 'layouts/form_errors', object: @user_session %>
  <div>
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  </div>
  <div>
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  </div>
  <div>
    <%= f.submit "Login" %>
  </div>
  <div>
    <%= link_to "Забыли пароль?", new_password_reset_path %>
  </div>
<% end %>