<h1>Login</h1>

<%= form_with model: @user_session, :url => user_session_path do |f| %>
 <% if @user_session.errors.any? %>
    <%= @user_session.errors.full_messages.to_sentence.capitalize %>
  <% end %> 
  <div>
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  </div>
  <div>
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  </div>
  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>