<div>
  <%= link_to "Заявки", expenses_path %> |
  <% if current_user.is_admin %>
    <%= link_to "Банковские счета", bank_accounts_path %> |
    <%= link_to "Кассы", cashboxes_path %> |
    <%= link_to "Пользователи", users_path %>
